[Unit]
Description=Start litecoin mainnet resolver
After=redis.service

[Service]
WorkingDirectory=/home/ubuntu/bitnodes
ExecStart=/home/ubuntu/.virtualenvs/bitnodes/bin/python -u resolve.py conf/resolve.conf.default

# output goes to /var/log/syslog
StandardOutput=syslog
StandardError=syslog
User=ubuntu
Group=ubuntu

TimeoutStartSec=5s
Restart=on-failure
RestartSec=20s

SyslogIdentifier=resolve

[Install]
WantedBy=multi-user.target

